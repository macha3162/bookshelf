= form_for @book, html: { class: "form form-horizontal book" } do |f|
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, class: 'form-control', required: true
    = f.error_span(:title)
  .form-group
    = f.label :isbn, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :isbn, class: 'form-control', required: true
    = f.error_span(:isbn)
  .form-group
    = f.label :auther_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :auther_id, class: 'form-control', required: true
    = f.error_span(:auther_id)
  .form-group
    = f.label :image_path, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :image_path, class: 'form-control', required: true
    = f.error_span(:image_path)
  .form-group
    = f.label :page, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :page, class: 'form-control', required: true
    = f.error_span(:page)
  .form-group
    = f.label :summary, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :summary, class: 'form-control', required: true
    = f.error_span(:summary)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), books_path, :class => 'btn btn-default'
