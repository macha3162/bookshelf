- model_class = Loan
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @loan.user_id
%p
  %strong= model_class.human_attribute_name(:book_id) + ':'
  %br
  = @loan.book_id
%p
  %strong= model_class.human_attribute_name(:checkouted_at) + ':'
  %br
  = @loan.checkouted_at
%p
  %strong= model_class.human_attribute_name(:returned_at) + ':'
  %br
  = @loan.returned_at
%p
  %strong= model_class.human_attribute_name(:due_date) + ':'
  %br
  = @loan.due_date


= link_to t('.back', :default => t("helpers.links.back")), loans_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_loan_path(@loan), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), loan_path(@loan), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
